@model EmployeeViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Are You Sure You Want To Delete Employee @Model.Name</h1>


<form asp-controller="Employee" asp-action="Delete" method="post">


	<partial name="PartialViews/DeleteDetailsPartialView">

	<input type="submit"  value="Delete" class="btn btn-danger" />
	<a asp-controller="Employee" asp-action="Index" class="btn btn-light">Cancel</a>
</form>

@section ValidationScriptsSection
{
	<partial name="_ValidationScriptsPartial">
}






