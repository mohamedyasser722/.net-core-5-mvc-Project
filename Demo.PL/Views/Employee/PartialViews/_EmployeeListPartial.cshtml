@model IEnumerable<EmployeeViewModel>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(e => e.Name)</th>
                <th>@Html.DisplayNameFor(e => e.Age)</th>
                <th>@Html.DisplayNameFor(e => e.Salary)</th>
                <th>@Html.DisplayNameFor(D => D.Department)</th>
                <th>@Html.DisplayNameFor(e => e.Address)</th>
                <th>@Html.DisplayNameFor(e => e.Email)</th>
                <th>@Html.DisplayNameFor(e => e.Phone)</th>
                <th>@Html.DisplayNameFor(e => e.HireDate)</th>
                <th>@Html.DisplayNameFor(e => e.IsActive)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.Name</td>
                    <td>@emp.Age</td>
                    <td>@Html.DisplayFor(e => emp.Salary)</td>
                    <td>@Html.DisplayFor(e => emp.Department.Name)</td>
                    <td>@emp.Address</td>
                    <td>@Html.DisplayFor(e => emp.Email)</td>
                    <td>@emp.Phone</td>
                    <td>@emp.HireDate</td>
                    <td>
                        @if (emp.IsActive)
                        {
                            <i class="fa-solid fa-circle" style="color:green"></i>
                        }
                        else
                        {
                            <i class="fa-solid fa-circle" style="color:red"></i>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-controller="Employee" asp-route-id="@emp.Id">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="Employee" asp-route-id="@emp.Id">
                            <i class="fa-solid fa-edit"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-controller="Employee" asp-route-id="@emp.Id">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert-warning">
        <h3>There are no employees</h3>
    </div>
}
