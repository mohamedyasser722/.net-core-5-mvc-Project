@model Department
@{
    ViewData["Title"] = "Details";
}

<h1>Department @Model.Name Details</h1>



<div class="form-group">

	<label class="col-form-label" asp-for="Code">Code</label>
	<input readonly class="form-control" asp-for="Code" />
	
</div>

<div class="form-group">

	<label class="col-form-label" asp-for="Name">Name</label>
	<input readonly class="form-control" asp-for="Name" />
	
</div>

<div class="form-group">

	<label class="col-form-label" asp-for="DateOfCreation">DateOfCreation</label>
	<input readonly class="form-control" asp-for="DateOfCreation" />
	
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-light">Back To List</a>



