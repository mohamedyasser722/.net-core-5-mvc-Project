@model Department
@{
    ViewData["Title"] = "Delete";
}

<h1>Are You Sure You Want To Delete @Model.Name Department</h1>


<form method="post" asp-action="Delete" asp-controller="Department">

	<div class="form-group">
		<label class="col-form-label" asp-for="Code">Code</label>
		<input class="form-control" asp-for="Code" disabled />
	</div>

	<div class="form-group">
		<label class="col-form-label" asp-for="Name">Name</label>
		<input class="form-control" asp-for="Name" disabled />
	</div>

	<div class="form-group">
		<label class="col-form-label" asp-for="DateOfCreation">DateOfCreation</label>
		<input class="form-control" asp-for="DateOfCreation" disabled />
	</div>

	<input type="hidden" asp-route-id="@Model.Id" />

	<button type="submit" value="delete" class="btn btn-danger">Delete</button>

	<a asp-action="Index" class="btn btn-light">Cnacel</a>

</form>

