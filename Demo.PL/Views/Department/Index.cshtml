 @model IEnumerable<Department>
@{
   ViewData["Title"] = "All Departments";
}
<a asp-action="Create" class="btn btn-success" >Create New Department</a>	
<br>

@if(Model.Count() > 0)
{
	<br />
	<h2>All Departments</h2>
	<br>
	<table class="table table-striped table-hover mt-3">
		<thead>

			<tr>
				<th>@Html.DisplayNameFor(d =>d.Code)</th>
				<th>@Html.DisplayNameFor(d =>d.Name)</th>
				<th>@Html.DisplayNameFor(d =>d.DateOfCreation)</th>
				<th>Details</th>
				<th>Update</th>
				<th>Delete</th>
			</tr>

		</thead>
		<tbody>

			@foreach(var dept in Model)
			{
				<tr>
					<td>@Html.DisplayFor(d =>dept.Code)</td>
					<td>@Html.DisplayFor(d =>dept.Name)</td>
					<td>@Html.DisplayFor(d =>dept.DateOfCreation)</td>
					
					<td>	<a asp-action="Details" asp-controller="Department" asp-route-id="@dept.Id"> <i class="fas fa-eye"></i> </a>		</td>
					<td>    <a asp-controller="Department" asp-action="Edit" asp-route-id="@dept.Id"> <i class="fas fa-edit"></i> </a></td>
					<td>	<a asp-controller="Department" asp-action="Delete" asp-route-id="@dept.Id"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
				</tr>
			}

		</tbody>
	</table>
}else
{
	<div class="mt-5 alert-warning">

		<h3>There is No Departments</h3>

	</div>
}